#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running tests before push..."

# Run the test suite (skip real API hits during push)
export DISABLE_REAL_API_TESTS=1
npm test

# Check if tests passed
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push aborted."
  echo "Please fix the failing tests before pushing to origin."
  exit 1
fi

echo "✅ All tests passed! Proceeding with push..."
